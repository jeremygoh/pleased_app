            <% if current_user %>
              <%= link_to "Log out", destroy_user_session_path, :method => :delete, "class" => "brand" %>
            <% end %>
            <!-- .nav, .navbar-search, .navbar-form, etc -->
          </div>

        </div>
      </div>
    </div>
    </nav>
    </div>
<% end %>



