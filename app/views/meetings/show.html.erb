<p>
  <strong>Meeting Date:</strong>
  <%= @meeting.date %>
</p>

<p>
  <strong>Group:</strong>
  <%= @meeting.group.name %>
</p>

<h4>Healthcase Professional</h4>
<% @meeting.group.users.each do |user| %>
    <% if user.role=="1" %>
      <p><%= user.full_name %></p>
    <% end %>
  <% end %>

<h4>Peer Leaders</h4>
  <% @meeting.group.users.each do |user| %>
    <% if user.role=="2" %>
      <p><%= user.full_name %></p>
    <% end %>
  <% end %>



<h4>Patients</h4>
  <% @meeting.group.patients.each do |patient| %>
  <div class="attend-user-form">
    <form action="/meetings/<%= @meeting.id %>/attends" method="post">
    <%= patient.last_name %>
    <%= patient.first_name %>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input id="patient" name="attend[patient_id]" type="hidden" value="<%= patient.id %>" />
    <input id="attend" name="attend[meeting_id]" type="hidden" value="<%= @meeting.id %>" />
    <input id="attend" name="attend[attended]" type="checkbox"/>
    <input type="submit" value="submit form" />

  </div>
  <% end %>







<%= link_to 'Edit', edit_meeting_path(@meeting) %> |
<%= link_to 'Back', meetings_path %>
